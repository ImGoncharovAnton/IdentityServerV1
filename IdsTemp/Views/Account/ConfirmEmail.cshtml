@{
    ViewData["Title"] = "Confirm email";
    var returnUrl = (string)ViewData["returnUrl"];
}
<h2 class="auth-heading">Confirm email</h2>
<div class="admin-page">
    <p>Thank you for confirming your email.</p>

    @if (returnUrl != "" || returnUrl != null)
    {
        <a href="@Url.Action("Login", new { returnUrl })"
           class="auth-link">
            Back to login
        </a>
    }

</div>