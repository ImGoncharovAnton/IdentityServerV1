@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IdsTemp.Models.AdminPanel.SettingsViewModel

@{
    ViewData["Title"] = "Settings";
}

<div class="admin-page">
   <form asp-action="Index" class="common-form" style="margin-bottom: 1rem">
       <select asp-for="@Model.SelectedThemeId" asp-items="@Model.ThemesList" class="common-input" style="margin-bottom: 1rem">
       </select>
       <div class="block-buttons flex-gap-1">
           <button class="common-button flex-cc" type="submit">Select Theme</button>
       </div>
   </form>
   
    <a href="~/.well-known/openid-configuration">Discovery server configuration</a> 
    <br/>
    <a asp-action="Index" asp-controller="Diagnostics">Diagnostics</a> 
</div>

