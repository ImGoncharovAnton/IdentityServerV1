@model IdsTemp.Models.Manage.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

@await Html.PartialAsync("_ValidationSummary")

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<h2 class="auth-heading">Profile</h2>

<div class="admin-page">

    <form method="post" class="common-form">
        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="common-input" disabled>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input type="hidden" asp-for="IsEmailConfirmed"/>
            @if (Model.IsEmailConfirmed)
            {
                <input asp-for="Email" class="common-input"/>
            }
            else
            {
                <input asp-for="Email" class="common-input"/>
                <button asp-action="SendVerificationEmail" class="auth-button flex-cc">Send Verification Email</button>
            }
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="common-input"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="common-input"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Website"></label>
            <input asp-for="Website" class="common-input"/>
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Profile"></label>
            <input asp-for="Profile" class="common-input"/>
            <span asp-validation-for="Profile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" class="common-input"/>
            <span asp-validation-for="StreetAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Locality"></label>
            <input asp-for="Locality" class="common-input"/>
            <span asp-validation-for="Locality" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Region"></label>
            <input asp-for="Region" class="common-input"/>
            <span asp-validation-for="Region" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" class="common-input"/>
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country"></label>
            <input asp-for="Country" class="common-input"/>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <button type="submit" class="auth-button flex-cc">Save</button>
    </form>

</div>