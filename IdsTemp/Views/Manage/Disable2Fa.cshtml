@{
   ViewData["Title"] = "Disable two-factor authentication (2FA)";
}

@* <partial name="_StatusMessage" for="StatusMessage" /> *@

<h2 class="common-heading">@ViewData["Title"]</h2>

<div class="admin-page common-form">
   <div class="alert alert-warning">
      <p>
         <span class="bi bi-exclamation-triangle"></span>
         <strong>This action only disables 2FA</strong>
      </p>
      <p>
         Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should
         <a asp-action="ResetAuthenticatorWarning"></a>
      </p>
   </div>
   <form asp-action="Disable2Fa" method="post">
      <div class="common-block-buttons">
         <button class="common-button flex-cc danger-button" type="submit">Disable 2FA</button>
      </div>
   </form>
</div>