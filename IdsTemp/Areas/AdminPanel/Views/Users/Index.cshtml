@using IdsTemp.Models.Common
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UsersViewModel;

@{
    ViewData["Title"] = "Users";

    var sortModel = (SortModel)ViewData["sortModel"];

    var paginator = ViewBag.Paginator;
}

<div class="user-container">

    <h2 class="common-heading"></h2>

    <partial name="_topBar" model="@paginator"/>

    <table class="table table-striped table-sm table-responsive-lg">
        <thead class="thead-dark">
        <tr class="users-tr-head">
            <th>ID</th>
            <th>
                <i class="@sortModel.GetColumn("username").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("username").SortExpression">UserName</a>
            </th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>
                <i class="@sortModel.GetColumn("email").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("email").SortExpression">Email</a>
            </th>
            <th>Phone</th>
            <th>
                <i class="@sortModel.GetColumn("role").SortIcon" arial-hidden="true"></i>
                <a asp-action="Index" asp-route-sortExpression="@sortModel.GetColumn("role").SortExpression">Role</a>
            </th>
            <th></th>

        </tr>
        </thead>

        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td class="id-td-column">@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info mr-1">Edit</a>|
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>

    </table>
    
    <partial name="_bottomBar" model="@paginator"/>
</div>