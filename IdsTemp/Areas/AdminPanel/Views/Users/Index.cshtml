@model UsersViewModel;

@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <h2>Users</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="row">
            <div class="form-group">
                <input class="form-control" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
            </div>
            <div class="form-group">
                <button class="btn btn-primary">Search</button>
            </div>

            <div class="col">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                <a href="@Url.Action("New")" class="btn btn-success">New</a>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th></th>
                
            </tr>
            </thead>

            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info">Edit</a>|
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                        @*<a href="@Url.Action("Delete", new { role.Id })" class="btn btn-danger">Delete</a>*@
                        @* @Html.ActionLink("Delete", "Delete", new { role.Id }) *@
                    </td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>
<div class="row">
    <div class="btn-group">
        <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Back to Admin</a>
    </div>
</div>