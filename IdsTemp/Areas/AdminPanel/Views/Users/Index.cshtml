@model UsersViewModel;

@{
    ViewData["Title"] = "Users";
}

<div class="user-container">

    <h2 class="common-heading"></h2>

    <form class="header-block flex-gap-1">
        <div class="search-block flex-gap-1">
            <input class="common-input" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
            <button class="flex-cc common-button">Search</button>
        </div>
        <div class="block-buttons flex-gap-1">
            <a asp-action="Index" class="flex-cc common-button back-button" asp-controller="Home">Back</a>
            <a asp-action="New" class="flex-cc common-button">New</a>
        </div>
    </form>

    <table class="table table-striped table-sm table-responsive-lg">
        <thead class="thead-dark">
        <tr class="users-tr-head">
            <th>ID</th>
            <th>UserName</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th></th>

        </tr>
        </thead>

        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td class="id-td-column">@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info mr-1">Edit</a>|
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>

    </table>
</div>