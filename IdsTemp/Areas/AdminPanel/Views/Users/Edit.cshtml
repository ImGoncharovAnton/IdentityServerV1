@model UserEditModel

@{
    ViewData["Title"] = "Users | Edit";
}

<div class="admin-page">
    <h2 class="common-heading">Edit @Model.UserName</h2>
    
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="common-label"></label>
            <input asp-for="FirstName" placeholder="Please, enter first name" class="common-input" minlength="4" maxlength="40" autofocus/>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="common-label"></label>
            <input asp-for="LastName" placeholder="Please, enter last name" class="common-input" minlength="4" maxlength="40" autofocus/>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="common-label"></label>
            <input asp-for="UserName" placeholder="Please, enter username" class="common-input" minlength="4" maxlength="40" autofocus/>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="common-label"></label>
            <input type="email" asp-for="Email" placeholder="Please, enter email" class="common-input" minlength="4" maxlength="40" autofocus/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="common-label"></label>
            <input type="tel" asp-for="Phone" placeholder="Please, enter phone number" class="common-input" minlength="10" maxlength="18" autofocus/>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RolesList" class="common-label"></label>
            <select asp-for="@Model.SelectedRoleId" asp-items="@Model.RolesList" class="common-input">
            </select>
        </div>
        <div class="block-buttons flex-gap-1">
            <button class="common-button flex-cc" type="submit">Save Changes</button>
            <a class="common-button back-button flex-cc" asp-action="Index">Back to List</a>
        </div>
    </form>
    
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}