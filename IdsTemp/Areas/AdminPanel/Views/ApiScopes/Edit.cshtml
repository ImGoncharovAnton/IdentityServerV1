@model ApiScopeModel
@{
    ViewData["Title"] = "API Scopes | Edit";
}

<div class="admin-page">

    <h2 class="common-heading">
        Edit Identity Scope: @Model.Name
    </h2>
    
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Name" class="form-control"/>

        <div class="form-group">
            <label asp-for="@Model.Name" class="common-label"></label>
            <input class="common-input" placeholder="Please, enter API scope name" minlength="4" maxlength="40" asp-for="@Model.Name" autofocus/>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.DisplayName" class="common-label"></label>
            <input class="common-input" placeholder="Please, enter API scope display name" minlength="4" maxlength="40" asp-for="@Model.DisplayName" autofocus/>
            <span asp-validation-for="@Model.DisplayName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="common-label" asp-for="@Model.UserClaims">User Claims (space delimited)</label>
            <input class="common-input" placeholder="Please, enter list user claims (space delimited), if you want" minlength="4" maxlength="40" asp-for="@Model.UserClaims"/>
        </div>

        <div class="block-buttons flex-gap-1">
            <button class="common-button flex-cc" type="submit">Save Changes</button>
            <a class="common-button back-button flex-cc" asp-action="Index">Back to List</a>
        </div>
    </form>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}