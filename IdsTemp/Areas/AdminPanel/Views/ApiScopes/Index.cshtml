@model ApiScopeViewModel

@{
}

<div class="clients-page">
    <div class="row">
        <h2>
            API Scopes
        </h2>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="row">
                <div class="form-group">
                    <input class="form-control" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Search</button>
                </div>

                <div class="col">
                    <a asp-action="Index" class="btn btn-secondary" asp-controller="Home" >Cancel</a>
                    <a asp-action="New" class="btn btn-success">New</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Name</th>
                </tr>
                </thead>

                <tbody>
                @foreach (var scope in Model.ApiScopes)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@scope.Name">@scope.Name</a>
                        </td>
                        <td>@scope.DisplayName</td>
                    </tr>
                }
                </tbody>

            </table>
        </div>
    </div>
</div>

