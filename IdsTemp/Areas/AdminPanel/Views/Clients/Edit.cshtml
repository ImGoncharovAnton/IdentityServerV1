@model ClientModel
@{
    ViewData["Title"] = "Edit";
}

<div class="clients-page">

    <h2>
        Edit Client Id: @Model.ClientId
        (<small>@Model.Flow</small>)
    </h2>

    <div class="row">
        <div class="col-md-6">
            <form method="post"  asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.ClientId" />
                <input type="hidden" asp-for="@Model.Flow" />

                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name" autofocus />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                
                @* TODO multiselect allowed scopes *@
                <div class="form-group">
                    <label asp-for="@Model.AllowedScopes">Allowed Scopes (space delimited)</label>
                    <input class="form-control" asp-for="@Model.AllowedScopes" />
                     <span asp-validation-for="@Model.AllowedScopes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.AccessTokenLifetime"></label>
                    <input input type="number" class="form-control" asp-for="@Model.AccessTokenLifetime" />
                </div>



                 @if (Model.Flow == IdsTemp.Models.AdminPanel.Flow.CodeFlowWithPkce)
                {
                    <div class="form-group">
                        <label asp-for="@Model.RedirectUri">RedirectUri (space delimited)</label>
                        <input class="form-control" asp-for="@Model.RedirectUri" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.PostLogoutRedirectUri"></label>
                        <input class="form-control" asp-for="@Model.PostLogoutRedirectUri" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.FrontChannelLogoutUri"></label>
                        <input class="form-control" asp-for="@Model.FrontChannelLogoutUri" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.BackChannelLogoutUri"></label>
                        <input class="form-control" asp-for="@Model.BackChannelLogoutUri" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.RequirePkce"></label>
                        <input type="checkbox" role="switch" class="form-control" asp-for="@Model.RequirePkce" />
                    </div>
                        <div class="form-group">
                        <label asp-for="@Model.AllowAccessTokensViaBrowser"></label>
                        <input type="checkbox" role="switch" class="form-control" asp-for="@Model.AllowAccessTokensViaBrowser" />
                    </div>
                        <div class="form-group">
                        <label asp-for="@Model.RequireConsent"></label>
                        <input type="checkbox" role="switch" class="form-control" asp-for="@Model.RequireConsent" />
                    </div>
                        <div class="form-group">
                        <label asp-for="@Model.AllowedCorsOrigins">AllowedCorsOrigins (space delimited)</label>
                        <input class="form-control" asp-for="@Model.AllowedCorsOrigins" />
                    </div>
                }

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <button class="btn btn-danger" type="submit" name="Button" value="delete">Delete</button>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}