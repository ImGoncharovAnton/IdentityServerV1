@model ClientViewModel
@{
    ViewData["Title"] = "Clients";

    var paginator = ViewBag.Paginator;
}

<div class="admin-page">
    <h2 class="common-heading">Clients</h2>

    <partial name="_topBar" model="@paginator"/>
    <div class="auth-new-button-container">
        <a asp-action="New" class="flex-cc common-button auth-new-button">New</a>
    </div>

    <div class="auth-table-container">
        <table class="auth-table">
            <thead class="auth-table__thead">
            <tr>
                <th>Client ID</th>
                <th>Name</th>
                <th>Flow</th>
                <th></th>
            </tr>
            </thead>

            <tbody class="auth-table__tbody">
            @foreach (var client in Model.Clients)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Name</td>
                    <td>@client.Flow</td>
                    <td class="flex justify-content-space-between">
                        <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-info mr-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
            </tbody>

        </table>
    </div>

    <partial name="_bottomBar" model="@paginator"/>

</div>