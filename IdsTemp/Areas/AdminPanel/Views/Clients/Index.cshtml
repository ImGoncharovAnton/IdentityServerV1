@model ClientViewModel
@{
    ViewData["Title"] = "Clients";
}

<div class="admin-page">
    <h2 class="common-heading">Clients</h2>

    <form class="header-block flex-gap-1">
        <div class="search-block flex-gap-1">
             <input class="common-input" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
             <button class="flex-cc common-button">Search</button>
        </div>
        <div class="block-buttons flex-gap-1">
            <a asp-action="Index" class="flex-cc common-button back-button" asp-controller="Home">Back</a>
            <a asp-action="New" class="flex-cc common-button">New</a>
        </div>
    </form>


    <table class="table table-striped table-sm table-responsive-lg">
        <thead class="thead-dark">
        <tr class="users-tr-head">
            <th>Client ID</th>
            <th>Name</th>
            <th>Flow</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var client in Model.Clients)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Name</td>
                <td>@client.Flow</td>
                <td class="flex justify-content-space-between">
                    <a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-info mr-1">Edit</a>
                    <a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>

    </table>

</div>