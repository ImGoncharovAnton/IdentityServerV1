
@model IdentityScopeModel
@{
    ViewData["Title"] = "Edit";
}

<div class="identityscopes-page">

    <h2>
        Edit Identity Scope: @Model.Name
    </h2>

    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Name" />

                <div class="form-group">
                    <label asp-for="@Model.DisplayName"></label>
                    <input class="form-control" asp-for="@Model.DisplayName" autofocus />
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.UserClaims">User Claims (space delimited)</label>
                    <input class="form-control" asp-for="@Model.UserClaims" />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    <button class="btn btn-danger" type="submit" name="Button" value="delete">Delete</button>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}