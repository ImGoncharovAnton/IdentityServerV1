
@model IdentityScopeModel
@{
    ViewData["Title"] = "New";
}

<div class="clients-page">
    <h2>
        New Identity Scope
    </h2>

    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="New">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input class="form-control" asp-for="Name" autofocus />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayName" class="control-label"></label>
                    <input class="form-control" asp-for="DisplayName" />
                </div>
                <div class="form-group">
                    <label asp-for="UserClaims">User Claims (space delimited)</label>
                    <input class="form-control" asp-for="UserClaims" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}