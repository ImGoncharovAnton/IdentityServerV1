@model RolesViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Roles";
    
    var paginator = ViewBag.Paginator;
}

<div class="admin-page">
    <h2 class="common-heading">Roles</h2>
    
    <partial name="_topBar" model="@paginator"/>

    <table class="table table-striped table-sm table-responsive-lg">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>
                    @role.Id
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">@role.Name</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { role.Id })" class="btn btn-danger">Delete</a>
                    @* @Html.ActionLink("Delete", "Delete", new { role.Id }) *@
                </td>
            </tr>
        }
        </tbody>

    </table>
    
     <partial name="_bottomBar" model="@paginator"/>
</div>