@model RolesViewModel
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Roles";

    var paginator = ViewBag.Paginator;
}

<div class="admin-page">
    <h2 class="common-heading">Roles</h2>

    <partial name="_topBar" model="@paginator"/>
    <div class="auth-new-button-container">
        <a asp-action="New" class="flex-cc common-button auth-new-button">New</a>
    </div>

    <div class="auth-table-container">
        <table class="auth-table">
            <thead class="auth-table__thead">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>

            <tbody class="auth-table__tbody">
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>
                        @role.Id
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@role.Id">@role.Name</a>
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { role.Id })" class="btn btn-danger">Delete</a>
                        @* @Html.ActionLink("Delete", "Delete", new { role.Id }) *@
                    </td>
                </tr>
            }
            </tbody>

        </table>
    </div>


    <partial name="_bottomBar" model="@paginator"/>
</div>