@model RolesViewModel

@{
    ViewData["Title"] = "Roles";
}

<div class="admin-page">
    <h2 class="common-heading">Roles</h2>

    <form class="header-block flex-gap-1">
        <div class="search-block flex-gap-1">
            <input class="common-input" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus/>
            <button class="flex-cc common-button">Search</button>
        </div>
        <div class="block-buttons flex-gap-1">
            <a asp-action="Index" class="flex-cc common-button back-button" asp-controller="Home">Back</a>
            <a asp-action="New" class="flex-cc common-button">New</a>
        </div>
    </form>

    <table class="table table-striped table-sm table-responsive-lg">
        <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>
                    @role.Id
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">@role.Name</a>
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { role.Id })" class="btn btn-danger">Delete</a>
                    @* @Html.ActionLink("Delete", "Delete", new { role.Id }) *@
                </td>
            </tr>
        }
        </tbody>

    </table>
</div>